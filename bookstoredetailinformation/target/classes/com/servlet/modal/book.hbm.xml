<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.servlet.modal.BookDetails" table="booksinfo">
    <id name="id" type="int" column="bookid">
     <generator class="increment"></generator>
    </id>
    <property name="bookname" >
       <column name="btitle"></column>
    </property>
    <property name="booksubject">
        <column name="bsubject"></column>
    </property>
    <property name="bookauthor">
        <column name="bauthor"></column>
    </property>
    
    <property name="bprice">
        <column name="price"></column>
    </property>
  </class>
</hibernate-mapping>